      "id": "guard_intro",
      "text": "The guard straightens, watching you carefully. What do you do?",
      "choices": [
        { "label": "Slap the guard", "to": "guard_slap" },
        { "label": "Give a compliment", "to": "guard_compliment" },
        { "label": "Leave", "to": "__close" }
      ]
    },
    {
      "id": "guard_slap",
      "text": "The guard does not react. Somewhere in the hall, Hel smiles.",
      "reward": {
        "evil": 1,
        "flags": { "meadhall_slapped_guard": true }
      },
      "choices": [
        { "label": "Close", "to": "__close" }
      ]
    },
    {
      "id": "guard_compliment",
      "text": "A single nod. Respect is noted, even here.",
